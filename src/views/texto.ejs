<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">textoss</h1>
      <p class="text-center lead">Crie ou edite seus textoss abaixo.</p>

      <%- include('includes/messages') %>

      <% if(texto._id) { %>
      <form action="/texto/edit/<%= texto._id %>" method="POST">
      <% } else { %>
      <form action="/texto/register" method="POST">
      <% } %>
        <input type="hidden" name="_csrf" value=<%= csrfToken %>>
        <div class="form-group">
          <label>Titulo</label>
          <input value="<%= texto.titulo %>" type="text" class="form-control" name="titulo">
        </div>
        <div class="form-group">
          <label>subtitulo</label>
          <input value="<%= texto.subtitulo%>" type="text" class="form-control" name="subtitulo">
        </div>
        <div class="form-group">
          <label>Corpo</label>
          <textarea id="mytextarea" value="<%= texto.corpo %>" class="form-control" aria-label="Com textarea" name="corpo"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Salvar</button>
      </form>

    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
